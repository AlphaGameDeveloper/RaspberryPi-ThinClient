# RaspberryPi-ThinClient Configuration
# Copy this file to config.yaml and update with your settings

# Proxmox Authentication
pve_username: "user@pam"          # Format: username@realm (pam, pve, etc)
pve_password: "your-password"     # Your Proxmox password

# Proxmox Connection Details
pve_proxy: "192.168.1.100"        # IP address or hostname of your Proxmox server
pve_node: "pve"                   # Node name where the VM is running
pve_vm_id: "100"                  # ID of the VM to connect to (must be a number)

